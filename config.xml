<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		id          = "myfirstapp"
        version     = "1.0.0" >

    <name>App with jQM</name>
    <description>My first mobile app with jQuery Mobile user interface</description>
    <author href="http://mypersonalwebsite.com" email="johnbrown@gmail.com">
		John Brown
	<universal-links>
    <host name="https://letsmeetbai.github.io/LetsMeet/" scheme="https" />
    <host name="https://letmeet-bai.firebaseio.com/" scheme="https">
    <path url="/__/auth/callback"/>
    </host>
</universal-links>
	</author>
	<platform name="android" />
	<preference name="AndroidLaunchMode" value="singleTask" />
	<plugin name="cordova-plugin-device" spec="~1.1.4" />
	<plugin name="cordova-plugin-dialogs" spec="~1.3.1" />
	<gap:plugin name="cordova-plugin-whitelist" source="npm" />
	<access origin="*" />
	<allow-navigation href="*" />
	<allow-intent href="*" />
	</gap:plugin>
	<gap:plugin name="cordova-plugin-googleplus" source="npm">
	<param name="REVERSED_CLIENT_ID" value="myreversedclientid" />
	</gap:plugin>
</widget>